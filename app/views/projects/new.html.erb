<h1>New project</h1>
<%= simple_form_for :project, url: projects_path do |f| %>
<% if @project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@project.errors.count, "error") %> prohibited
      this project from being saved:</h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

	<div class="form-group">
		<%= f.input :프로젝트명, input_html: { class: 'form-control' }, label: false, placeholder: '프로젝트명' %>
	</div>
	<div class="form-group">
		<%= f.file_field :photo %>
	</div>
	<div class="form-group">
		<%= f.input :인원, as: :integer, label: false, placeholder: '제한인원', input_html: { class: 'form-control' } %>
