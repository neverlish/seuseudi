	<div class="form-group">
		시작일자 <%= f.date_field :시작일자, input_html: { class: 'form-control' } %>
	</div>
	<div class="form-group">
		종료일자 <%= f.date_field :종료일자, input_html: { class: 'form-control' } %>
	</div>
	<div class="form-group">
		<%= f.input :일정, input_html: { class: 'form-control' }, label: false, placeholder: '일정' %>
	</div>
	<div class="form-group">
		<%= f.input :목표, input_html: { class: 'form-control' }, label: false, placeholder: '목표' %>
	</div>
	<div class="form-group">
		<%= f.button :submit, class: 'btn btn-default' %>
