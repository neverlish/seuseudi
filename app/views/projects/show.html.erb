<h3><%= @project.프로젝트명 %></h3>
<div class="text-right">
	<% if current_user == @project.user %>
		<%= link_to edit_project_path(@project) do %>
			<span class="glyphicon glyphicon-edit"></span>
		<% end %>
		<%= link_to project_path(@project), method: "delete", data: {confirm: 'Are you sure?'} do %>
			<span class="glyphicon glyphicon-trash"></span>
		<% end %>
	<% end %>
</div>

<div class="text-center">
<%= image_tag @project.photo, :width => 400 %>
</div>


<div class="row">
	<div class="col-md-6 col-sm-6 col-xs-12">
		<div class="alert alert-warning">
			<span class="glyphicon glyphicon-exclamation-sign"></span>
			<%= @project.목표 %>
		</div>
	</div>
	<div class="col-md-6 col-sm-6 col-xs-12">
		<div class="alert alert-info">
			<span class="glyphicon glyphicon-calendar"></span>
			프로젝트 기간: <%= @project.시작일자 %>~<%= @project.종료일자 %><br>
			<%= @project.일정 %>
		</div>
	</div>
</div>

<div class="alert alert-success">
	<span class="glyphicon glyphicon-th-list"></span>
</div>
<ul class="list-group">
  <li class="list-group-item">
    <span class="badge">14</span>
    Cras justo odio
  </li>
</ul>

<% if current_user.is_like?(@project) %>
  <%= link_to project_like_path(@project), method: "post" do %>
  	<span class="glyphicon glyphicon-thumbs-down"></span>
  <% end %>
<% else %>
  <%= link_to project_like_path(@project), method: "post" do %>
  	<span class="glyphicon glyphicon-thumbs-up"></span>
  <% end %>
<% end %>
<%= @project.likes.size %> likes

<hr>
<br>
<% @project.comments.each do |comment| %>
	<p>
    <strong><%=comment.user.username || comment.user.name %></strong>
    <%= comment.body %>
  	<% if comment.user.id == current_user.id %>
  	 <%= link_to project_comment_path(@project, comment), method: "delete" do %>
  	 	<span class="glyphicon glyphicon-trash"></span>
  	 <% end %>
  	<% end %>
  </p>
<% end %>
<div class="form-group">
<%= form_for([@project, @project.comments.build]) do |f| %>
	<p>	
		<%= f.text_area :body, class: "form-control", placeholder: "new comment" %>
	</p>
	<p>
		<%= f.submit class: "btn btn-default" %>
	</p>
<% end %>
