<h1>프로젝트 수정</h1>

<%= simple_form_for :project, url: project_path(@project), method: :patch do |f| %>
 	<div class="form-group">
		<%= f.input :프로젝트명, input_html: { class: 'form-control' }, label: false, placeholder: '프로젝트명' %>
	</div>
	<div class="form-group">
		<%= f.input :일정, input_html: { class: 'form-control' }, label: false, placeholder: '일정' %>
	</div>
	<div class="form-group">
		<%= f.input :목표, input_html: { class: 'form-control' }, label: false, placeholder: '목표' %>
	</div>
	<div class="form-group">
		<%= f.button :submit, class: 'btn btn-default' %>
	</div>
<% end %>

<%= link_to 'Back', projects_path %>
